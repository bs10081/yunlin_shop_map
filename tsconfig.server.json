{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist/server",
    "rootDir": "./server",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
